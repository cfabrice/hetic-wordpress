.footer
  width 100%
  height auto
  display flex
  flex-direction column
  padding 0 10vw
  margin 40px 0
  font-size 15px
  color $black
  opacity 0.7
  text-transform capitalize
  @media screen and (min-width: $laptop)
    flex-direction row  
    padding 0
    align-items center
  &--copyright
    width 100%
    height 40px
    display flex
    align-items center
    justify-content center
    flex-direction row
    @media screen and (min-width: $laptop)
      width calc(50vw + 35px)
      padding 0 10vw
    span
      margin-left 20px
    svg
      width 40px
      height 40px
      path
        fill $black
        stroke none
      circle 
        fill none 
        stroke $black
        stroke-width 50px
  &--nav
    list-style none
    width 100%
    margin 0
    padding 0
    margin-top 10px
    @media screen and (min-width: $laptop)
      display flex
      flex-direction row
      flex-wrap wrap
      height 40px
      margin 0 auto
      align-items center
      width 500px
    li
      text-align center
      padding 5px 0
      &:nth-child(4)
        margin-top 40px
        @media screen and (min-width: $laptop) 
          margin-top 0                 
      svg
        width 24px
        height 24px
        *
          fill $grey
      a
        display block
        width 100%
        height 100%
      @media screen and (min-width: $laptop)
        margin 0
        width calc(100% / 6)