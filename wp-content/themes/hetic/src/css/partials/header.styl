.header
  position fixed
  z-index 1000
  top 0
  left 0
  width 100vw
  height 80px
  @media screen and (min-width: $laptop)  
    box-shadow 0 0 5px rgba(0,0,0,.2)  
  &--logo
    position relative
    z-index 1000
    background $white
    width 100%
    height 80px
    box-shadow 0 0 5px rgba(0,0,0,.2)
    @media screen and (min-width: $laptop)
      margin-left 40px
      width 80px
      background none
      box-shadow none    
    svg
      width 80px
      height 80px
      transform scale(0.5)
      path
        fill $yellow
        stroke none
      circle 
        fill none 
        stroke $yellow
        stroke-width 50px
  &-burger
    width 30px
    height 40px
    position absolute
    z-index 1000
    top 20px
    right 20px
    margin 0
    padding 0
    border none
    background none
    outline none
    cursor pointer
    @media screen and (min-width: $laptop)
      display none    
    &--line
      display block
      width 100%
      height 2px
      border-radius 2px
      background $black
      position absolute
      transition all .3s ease-in-out
      &:nth-child(1)
        margin-top -10px
      &:nth-child(2)
        margin-top 0
      &:nth-child(3)
        margin-top 10px
    &-active
      .header-burger--line
        margin 0
        &:nth-child(1)
          transform rotate(45deg)
        &:nth-child(2)
          opacity 0
        &:nth-child(3)
          transform rotate(-45deg)
  &-nav
    position absolute
    top 80px
    left 0
    z-index 999
    width 100vw
    height auto
    max-height calc(100vh - 80px)
    overflow-y scroll
    background darken($white, 3%)
    box-shadow 0px 0px 5px rgba(0,0,0,.2)
    transform translateY(-100%)
    transition all .3s ease-in-out
    @media screen and (min-width: $laptop)
      transform translateY(0)
      display flex
      flex-direction row
      justify-content space-between
      height 80px
      top 0
      box-shadow none
      overflow hidden
    &-expand
      transform translateY(0)      
    &-list
      width 100%
      list-style none
      margin 0
      padding 0
      li
        margin 0  
        width 100%
        height 50px
        line-height 50px
        position relative
        img
          margin 14px 0
          height 20px
          width 30px
          height auto
        &::before
          content ""
          position absolute
          width 60%
          height 2px
          left 20%
          bottom 0
          background darken($white, 6%)
          border-radius 2px
        a
          display block
          width 100%
          height 100%
          padding-left 15%
          color inherit
          background darken($white, 3%)
          &:active
            background darken($white, 6%)
          &.active
            color $yellow
            
      @media screen and (min-width: $laptop)
        width auto
        max-width 40vw
        display flex
        flex-direction row
        li
          text-align center
          width auto
          height 80px
          line-height 80px
          &::before
            display none 
          a
            padding 0 15px
            &.active
              border-bottom 2px solid $yellow
              color $yellow
          img
            margin 30px 0
      &-left
        text-transform uppercase
        font-size 12px
        font-weight 500
        @media screen and (min-width: $laptop)
          margin-left 135px
        
      &-right
        text-transform capitalize
        font-size 14px
        font-weight 400
        color rgba(72,72,72,.7)
        li:last-child::before
          width 0px
        @media screen and (min-width: $laptop)
          margin-right 40px

           