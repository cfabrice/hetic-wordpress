.section-social
  width 100vw
  // min-height calc(100vh - 80px)
  background $grey
  margin-top 0px
  padding 0
  @media screen and (min-width: $laptop)
    display flex
    flex-direction row
    flex-wrap wrap
    align-content flex-start
  &-photo
    width 100vw
    height 100vw
    background-repeat no-repeat
    background-size cover    
    background-color $black
    @media screen and (min-width: $laptop)
      width 50vw
      height 50vw
      margin 0    
  &-content
    width 100vw
    height auto
    @media screen and (min-width: $laptop)
      width 50vw
      height 50vw
      margin 0
      display flex
      flex-direction column
      justify-content center
      align-items center
      position relative
    &--title
      width 100%
      height 85px
      line-height 85px
      margin 0
      padding 0
      background $white
      color rgba(72,72,72,.7)
      text-transform uppercase
      font-size 14px
      text-align center
      @media screen and (min-width: $laptop)
        text-align left
        position absolute
        top 0
        left 0
        padding 0 10vw      
    &-about
      width 100%
      height 85px
      display flex
      flex-direction row
      margin 30px 0
      padding 0 10vw         
      @media screen and (min-width: $laptop)
        margin-top 85px
      &--img
        width 85px
        height 85px
        border-radius 50%
        overflow hidden
        background-size cover
        background-position center center
      &--name
        width auto
        height 85px
        line-height 85px
        font-size 15px
        text-transform uppercase
        margin 0
        margin-left 25px
        color $white
        opacity 0.7
    &--text
      font-size 20px
      line-height 30px
      padding 0 10vw
      margin 0      
      text-align left
      color $white
      font-family 'Alegreya Sans', sans-serif
    &--date
      font-size 12px
      text-transform uppercase
      color $white
      opacity 0.7
      margin 15px 0
      padding 0 10vw
      @media screen and (min-width: $laptop)
        width 100%    

  &-links
    width 100%
    display flex
    flex-direction column
    flex-wrap wrap
    @media screen and (min-width: $tablet)
      flex-direction row
      width 100vw
      height 60px
      margin 0
    @media screen and (min-width: $laptop)
      width 50vw    
      
    &-link
      width 200px
      height 60px
      line-height 60px
      text-align center
      margin 0 auto
      text-transform uppercase
      font-size 12px
      color $white
      opacity 0.7
      &:last-child
        margin-bottom 20px
        