.section-news
  position relative
  @media screen and (min-width: $laptop)  
    padding-bottom 120px  
  &-wrapper
    width 100%
    height auto
    display flex
    flex-direction column
    padding 0 10vw
    @media screen and (min-width: $laptop)
      flex-direction row
      justify-content space-between
      flex-wrap wrap
    &-item
      width 100%
      margin-top 40px
      @media screen and (min-width: $laptop)   
        width calc(100% / 2.5)
      @media screen and (min-width: $laptop-large)
        width calc(100% / 3.8)
        margin 0
        margin-top 40px
      &--img
        width 100%
        height 190px
        background-size cover
        background-position center center
      &--date
        font-size 12px
        text-transform uppercase
        color $black
        opacity 0.5
        margin 20px 0 20px 0
      &--title
        color $black
        font-size 28px
        margin-bottom 20px
        text-transform uppercase
        font-family 'Alegreya Sans SC', sans-serif
      &--text
        color $black
        font-size 16px
        line-height 24px
        text-align left
        hyphens auto
        opacity .7