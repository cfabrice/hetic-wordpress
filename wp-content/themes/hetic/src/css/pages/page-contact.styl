.contact
  .section--title
    margin 70px 0 40px 0
  &-form
    width 100%
    height auto
    padding 0 10vw
    display flex
    flex-direction column
    @media screen and (min-width: $laptop)
      flex-direction row
      flex-wrap wrap
      justify-content space-between
  &-input, &-text
    width 100%
    height auto
    margin-bottom 25px
    @media screen and (min-width: $laptop)
      width calc(50% - 25px)
      &.contact-text
        width 100%
    label
      display block
      width 100%
      height 20px
      margin-bottom 5px
      font-size 17px
      color rgba($black, .7)
      text-transform capitalize
    input, select
      display block
      height 40px
      line-height 38px
      width 100%
      background darken($white, 2%)
      border 2px solid darken($white, 4%)
      outline none
      border-radius 2px
      font-size 15px
      padding-left 20px
      color $black
      &::placeholder
        color rgba($black, .5)
    textarea
      width 100%
      height 160px
      padding 20px      
      background darken($white, 2%)
      border 2px solid darken($white, 4%)
      resize none
      outline none
      &::-webkit-scrollbar 
        width 3px
        background darken($white, 9%)
      &::-webkit-scrollbar-track 
        background none
      &::-webkit-scrollbar-thumb 
        background-color $yellow
        width 3px
        
  input[type="submit"]
    background $yellow
    height 40px
    line-height 40px
    width auto
    padding 0 80px
    font-size 20px
    color $white
    border none
    margin-left auto
    margin-top 15px
    border-radius 2px
    margin-left auto
    margin-right 0
    outline none
    cursor pointer
    &:active
      background darken($yellow, 4%)


  