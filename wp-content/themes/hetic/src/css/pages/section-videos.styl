.section-videos
  width 100%
  height auto
  // padding-bottom 140px
  // margin-bottom 40px
  &-wrapper
    margin-top 40px
    width 100%
    height calc(100vw / 1.78)
    position relative
    background #000000
    overflow hidden
    &.playing
      .section-videos-wrapper-video  
      .section-videos-wrapper-controls
        &--toggle
          &-play
            display none
          &-pause
            display block
    &-video
      width 100%
      // height calc(100vw / 1.78)
      height auto
      transition all .25s ease-in-out
      backface-visibility hidden      
    &-controls
      background rgba(0,0,0,.5)
      width 100%
      height 40px
      position absolute
      bottom 0
      left 0
      backface-visibility hidden
      user-select none
      &--toggle
        padding 0
        width 40px
        height 40px
        background none
        border none
        cursor pointer
        outline none
        position relative
        opacity .5
        &-play
          display block
        &-pause
          display none
        span
          width 100%
          height 100%
          position absolute
          top 0
          left 0
          svg
            width 100%
            height 100%
            fill none
            stroke $white
            stroke-width 1
            stroke-linecap round
            stroke-linejoin round
            transform scale(0.4)
      &-seek-bar
        width calc(100% - 225px)
        height 4px
        background rgba(255,255,255,.2)
        position absolute
        bottom 12px
        left 50px
        border-radius 5px
        overflow hidden
        cursor pointer
        transition transform .2s ease-in-out
        backface-visibility hidden
        &--fill
          width 100%
          height 100%
          background $yellow
          opacity .25
          transform-origin 0% 50%
          transform scaleX(0)
          backface-visibility hidden
      &-time
        font-size 12px
        color $white
        opacity .5
        position absolute
        bottom 20px
        user-select none
        &-current
          left 50px
        &-duration
          right 175px
          user-select none 
      &-volume
        width 140px
        height 40px
        background none
        border none
        position absolute
        outline none
        cursor pointer
        top 0
        right 15px
        padding 0
        opacity .5
        background red
        svg
          width 100%
          height 100%
          fill none
          stroke $white
          stroke-width 1
          stroke-linecap round
          stroke-linejoin round
          transform scale(0.4)
  &-nav
    width 100%
    height 150px
    background blue
    position relative