.section-projects
  position relative
  height 100vh
  // @media screen and (min-width: $laptop)  
  //   padding-bottom 120px  
  &-wrapper
    width 100%
    height auto
    display flex
    flex-direction column
    padding 0 10vw
    &-item
      width 100%
      padding 0 10vw
      position relative
      margin-top 60px
      &--date
        left 0
        top -40px
        height 60px
        width 140px
        font-size 60px
        position absolute
        text-align center
        color $black
      &--img
        width 100%
        height 325px
        background-size cover
      &--title
        width 100%
        font-size 28px
        color $black
        margin 15px 0 5px 0
        // margin 35px 0 20px 0
      &--tags
        font-size 12px
        color $black
        opacity 0.5
        text-transform uppercase